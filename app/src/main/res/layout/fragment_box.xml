<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/monochromatic"
    tools:context=".BoxFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Here are 21 things to do while staying home.Remember that HOPE is the only thing stronger then fear:)"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="25dp"
        android:textColor="@color/white"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/boxrecycler"
        android:background="@color/monochromatic"
        android:layout_marginTop="200dp"
        android:layout_marginRight="75dp"
        android:layout_marginLeft="30dp"/>



</FrameLayout>